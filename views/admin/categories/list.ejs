<%- include ('../../partials/header.ejs') %>

<%- include ('../../partials/navbar.ejs') %>

<body>
    <div class="container">
        <hr>
        <h2>Categorias</h2>
        <a href="/admin/categories/new" class="btn btn-success">New Category</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Action</th>
                </tr>
            </thead>
            <% categories.forEach(category=>{ %>
                <tr>
                    <th><%=category.id %></th>
                    <th><%=category.title %></th>
                    <th><%=category.slug %></th>
                    <th>
                        <a href="/admin/categories/edit/<%=category.id%>" class="btn btn-warning"> Edit</a>
                        
                        <form action="/admin/categories/delete" method="POST" style="display: inline;" onsubmit="confirmation(event,this)" >
                            <input type="hidden" name="categoryId" value="<%=category.id%>">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        
                    </th>
                </tr>
            <% }) %>
            
        </table>
    </div>
</body>

<%- include ('../../partials/footer.ejs') %>
<script>
    function confirmation(event,form){
        event.preventDefault();
        var decision = confirm("Delete this category?");
        if(decision){
            form.submit();
        } 
    }
    
</script>