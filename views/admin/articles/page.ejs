<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/homeNavbar.ejs') %>
<body>
    <div class="container">
            
            <% result.articles.rows.forEach(article=>{ %>
                <div class="card mt-3">
                    <div class="card-header ">
                        <h4><%=article.title%></h4>
                    </div>
                    <div class="card-body">
                        <a href="/<%=article.slug%>" class="btn btn-success">Read Article</a>
                    </div>                     
                </div>
                
           <% }) %>

        
        <div class="row"> 
            <div class="col col-12">
                <% if(result.page==2){ %>
                    <a href="/"> Previous</a>
                <%} else if(result.page>=2){ %>
                    <a href="/articles/page/<%=result.page -1 %>"> Previous</a>
               <% } %>
                
                <% if(result.next){ %>
                    <a style="float:right" href="/articles/page/<%=result.page + 1  %>">Next </a>
                <%} %>
                
            </div>
        </div>  
        
    </div> 

    <%- include ('../../partials/footer.ejs') %>

</body>