<body>
    <div class="container mt-3  ">
        <div class="card">
            <div class="card-header">
                <h3>Create a new article</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/articles/savingArticles" >
                    <input class="form-control mb-2" type="text" name="title" placeholder="Type here your article title">
                    <textarea class="form-control mb-2" name="body" id="article" ></textarea>
                    <label class="h5 mt-3">Categoria</label>
                    <select name="category" class="form-control mb-4" >
                        <% categories.forEach(category=>{ %>
                            <option value="<%=category.id%>"><%=category.title%></option>
                       <% }) %> 

                    </select>
                    <button class="btn btn-success">Create Article</button>
                </form>
            </div>
        </div>
    

    
    </div>

    <script src="/tinymce/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: "#article",
            plugins: [
                'advlist print fullscreen autolink preview hr searchreplace wordcount media save table paste emoticons' ]
        })
    </script>
</body>


